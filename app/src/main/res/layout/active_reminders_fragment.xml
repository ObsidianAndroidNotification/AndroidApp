<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ui.fragments.active_reminders.ActiveRemindersFragment">

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/active_reminders_recycler_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

  <include
    android:id="@+id/empty_data_parent"
    layout="@layout/empty_dataset"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/active_reminders_recycler_view" />
</androidx.constraintlayout.widget.ConstraintLayout>
